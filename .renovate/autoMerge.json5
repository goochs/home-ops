{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Auto merge Github Actions",
      matchManagers: ["github-actions"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor", "patch", "digest"],
    },
    {
      description: "Auto-merge for trusted containers",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["minor", "patch", "digest"],
      matchPackagePrefixes: ["ghcr.io/home-operations", "ghcr.io/goochs/"],
    },
    {
      description: "Auto-merge OCI Charts",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["major", "minor", "patch"],
      matchPackageNames: ["/prometheus-operator-crds/"],
      ignoreTests: false,
    },
    {
      description: "Auto merge all patches",
      matchDatasources: ["helm", "docker"],
      automerge: true,
      automergeType: "pr",
      matchUpdateTypes: ["patch", "digest"],
      matchCurrentVersion: "!/^0/",
    },
  ],
}
