{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Flux Operator Group",
      groupName: "flux-operator",
      matchDatasources: ["docker"],
      matchPackageNames: [
        "/flux-operator/",
        "/flux-instance/",
        "/flux-operator-manifests/",
      ],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 3,
    },
    {
      description: "Talos Group",
      groupName: "Talos",
      matchPackageNames: ["/siderolabs/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "Immich Group",
      groupName: "Immich",
      matchPackageNames: ["/immich-app/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "Rook-Ceph Group",
      groupName: "rook-ceph",
      matchPackageNames: ["/rook-ceph/", "/rook-ceph-cluster/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "1Password Group",
      groupName: "1password",
      matchPackageNames: ["/1password/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "VictoriaMetrics Group",
      groupName: "victoriametrics",
      matchDatasources: ["docker"],
      matchPackageNames: ["/victoriametrics/helm-charts/"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "Actions Runner Controller Group",
      groupName: "actions-runner-controller",
      matchDatasources: ["docker"],
      matchPackageNames: ["/gha-runner-scale-set-controller/", "/gha-runner-scale-set/"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
  ],
}
