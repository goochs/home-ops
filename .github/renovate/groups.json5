{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Flux Group",
      groupName: "Flux",
      matchDatasources: ["docker", "github-tags"],
      versioning: "semver",
      group: { commitMessageTopic: "{{{groupName}}} group" },
      matchPackageNames: ["/flux/"],
      minimumGroupSize: 2,
    },
    {
      description: "Talos Group",
      groupName: "Talos",
      matchPackageNames: ["/siderolabs/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "Immich Group",
      groupName: "Immich",
      matchPackageNames: ["/immich-app/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "Rook-Ceph Group",
      groupName: "Rook-Ceph",
      matchPackageNames: ["/rook-ceph/", "/rook-ceph-cluster/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "1Password Group",
      groupName: "1Password",
      matchPackageNames: ["/1password/"],
      matchDatasources: ["docker"],
      group: { commitMessageTopic: "{{{groupName}}} group" },
      minimumGroupSize: 2,
    },
    {
      description: "Intel Device Plugins Group",
      groupName: "intel-device-plugins",
      matchDatasources: ["docker"],
      matchPackageNames: ["/intel-device-plugins-operator/", "/intel-device-plugins-gpu/"],
      group: { commitMessageTopic: "{{{groupName}}} group", },
      minimumGroupSize: 2,
    },
  ],
}
